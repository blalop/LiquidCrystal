<layout id="WatchFace">
    <drawable id="LiquidCrystalBackground" class="LiquidCrystalBackground"/>

    <label id="Battery" class="LiquidCrystalLabel" x="50%" y = "95%" font="@Fonts.Data" justification="Graphics.TEXT_JUSTIFY_CENTER | Graphics.TEXT_JUSTIFY_VCENTER" color="Graphics.COLOR_WHITE"/>
    <label id="Date" class="LiquidCrystalLabel" x="75%" y = "30%" font="@Fonts.Data" justification="Graphics.TEXT_JUSTIFY_CENTER | Graphics.TEXT_JUSTIFY_VCENTER" color="Graphics.COLOR_WHITE"/>
    <label id="DayOfWeek" class="LiquidCrystalLabel" x="25%" y = "30%" font="@Fonts.Data" justification="Graphics.TEXT_JUSTIFY_CENTER | Graphics.TEXT_JUSTIFY_VCENTER" color="Graphics.COLOR_WHITE"/>
    <label id="Time" class="LiquidCrystalLabel" x="50%" y="50%" font="@Fonts.Time" justification="Graphics.TEXT_JUSTIFY_CENTER | Graphics.TEXT_JUSTIFY_VCENTER" color="Graphics.COLOR_WHITE"/>
    <label id="Temperature" class="LiquidCrystalLabel" x="50%" y="5%" font="@Fonts.Data" justification="Graphics.TEXT_JUSTIFY_CENTER | Graphics.TEXT_JUSTIFY_VCENTER" color="Graphics.COLOR_WHITE"/>

</layout>